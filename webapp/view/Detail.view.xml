<mvc:View controllerName="sap.ui.demo.fiori2.controller.Detail" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core" xmlns:m="sap.m" xmlns:core="sap.ui.core" height="100%">
	<m:Page showHeader="false" enableScrolling="true" class="sapUiContentPadding">
		<m:content>
			<TreeTable id="bookingsTable" rows="{bookings>/bookingData}" selectionMode="MultiToggle" enableSelectAll="false" ariaLabelledBy="title"
				rowSelectionChange="onCheck" visibleRowCount="15">
				<toolbar>
					<m:Toolbar>
						<m:Title id="title2" text="{i18n>detailPageTitle}"></m:Title>
						<m:ToolbarSpacer/>
						<m:MenuButton text="{i18n>detailPageFilterByMonth}" buttonMode="Split" useDefaultActionOnly="true">
							<m:menu>
								<m:Menu itemSelected="onMenuAction" items="{ path: 'bookings>/filterData', templateShareable: true }">
									<m:MenuItem text="{bookings>year}" icon="sap-icon://check-availability" items="{ path: 'bookings>months', templateShareable: true }">
										<m:items>
											<m:MenuItem text="{bookings>month}" icon="sap-icon://activities"/>
										</m:items>
									</m:MenuItem>
								</m:Menu>
							</m:menu>
						</m:MenuButton>
						<m:ToolbarSpacer/>
						<m:Button id="editButton" text="{i18n>editBookingDetailButton}" enabled="false" type="Transparent" press="onMakeEditable"/>
						<m:Button id="saveButton" text="{i18n>saveBookingDetailButton}" enabled="false" type="Transparent" press="onEdit"/>
						<m:Button id="createButton" text="{i18n>createBookingDetailButton}" type="Transparent" press="onCreate"/>
						<m:Button id="deleteButton" text="{i18n>deleteBookingDetailButton}" enabled="false" type="Transparent" press="onDelete"/>
					</m:Toolbar>
				</toolbar>
				<columns>
					<Column label="{i18n>columnDay}" width="155px">
						<template>
							<m:Input class="tableRow" value="{bookings>day}" enabled="false" editable="false"/>
						</template>
					</Column>
					<Column label="{i18n>columnStartHour}" width="100px">
						<template>
							<m:Input class="tableRow" value="{bookings>startHour}" enabled="false" editable="true"/>
						</template>
					</Column>
					<Column label="{i18n>columnEndHour}" width="100px">
						<template>
							<m:Input class="tableRow" value="{bookings>endHour}" enabled="false" editable="true"/>
						</template>
					</Column>
					<Column label="{i18n>columnWorkedHours}" width="70px">
						<template>
							<m:Input class="tableRow" value="{bookings>hours}" enabled="false" editable="false"/>
						</template>
					</Column>
					<Column label="{i18n>columnPsp}">
						<template>
							<m:ComboBox id="pspComboBox" value="{bookings>pspName}" visible="true" enabled="false" width="auto"
								items="{ path: 'bookings>/pspsData', templateShareable: true }" editable="true">
								<core:Item key="{bookings>pspId}" text="{bookings>pspName}"/>
							</m:ComboBox>
						</template>
					</Column>
					<Column label="{i18n>columnDetails}">
						<template>
							<m:Input class="tableRow" value="{bookings>description}" enabled="false" change="handleDescription" editable="true"/>
						</template>
					</Column>
				</columns>
			</TreeTable>
		</m:content>
	</m:Page>
</mvc:View>