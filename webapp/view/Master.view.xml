<mvc:View
	controllerName="sap.ui.demo.fiori2.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>masterPageTitle}"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="17.5rem"/>
					<OverflowToolbarButton icon="sap-icon://synchronize" text="{i18n>masterSynchronizeButton}" type="Transparent" press=".onSynchronize"/>
					<OverflowToolbarButton icon="sap-icon://sort" text="{i18n>masterSortButton}" type="Transparent" press=".onSort"/>
				</OverflowToolbar>
				<Table
					id="usersTable"
					inset="false"
					items="{
						path: 'users>/modelData',
						sorter: {
							path: 'programName'
						}
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<columns>
						<Column width="12em">
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onPressed">
							<cells>
								<ObjectIdentifier id="user" title="{users>firstName} {users>lastName}" text="{users>programName}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>
		
	</f:DynamicPage>
</mvc:View>